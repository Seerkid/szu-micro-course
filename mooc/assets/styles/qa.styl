#main

    & #wrapper

        & #tips
            overflow hidden

            & ul
                margin 0 

            & li:first-child
                & a
                    margin 0px 5px 0px 0px

            & ul li
                float left

                & a
                    top-border-radius 5
                    font-weight bold
                    display block
                    color #7b8896
                    background #ccd7e0
                    padding 7px 21px 8px
                    font-size 14px
                    margin 0px 5px 0px 5px

                & a.current
                    background #fff
                    color #ff5400

        & #question-list
            padding 10px
            background #fff
            bottom-border-radius 5

            & .question-item
                overflow hidden
                border-bottom 1px solid #DCE5EB

                & .question-left-float
                    float left
                    margin 10px

                & .question-stats
                    & div
                        color #aaa
                        font-size 12px
                        text-align center

                        & p
                            font-size 22px
                            line-height 28px

                    & .respond-count
                        color #CC0000

                & .question-content

                    & .question-title
                        line-height 36px

                    & .question-tags
                        margin 0
                        padding 0

                        & li
                            margin 3px
                            float left
                            padding 3px
                            font-size 12px
                            background #eee
                            top-border-radius 3px
                            bottom-border-radius 3px

                    & .question-author

                        margin 0
                        padding 0

                        & span
                            color #bac0c5
                            float left
                            margin 3px
                            padding 3px 0 3px 0
                            font-size 12px

    & #right
        & .info-wrapper .info-box .content .content-list li

            margin 15px 0 20px 0

            & span
                color #515c73
                padding 5px 10px 5px 10px
                background #dce5eb
                top-border-radius 5px
                bottom-border-radius 5px
                font-size 14px