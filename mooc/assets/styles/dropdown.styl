.dropdown
    top 50px
    right 30px
    width 120px
    padding-top 25px
    margin-top 0px
    position absolute
    z-index 1000

    & li
        color #fff
        display block !important
        float none !important
        padding 2px !important
        background #484e5b

        &:first-child
            border-radius 4px 4px 0 0

        &:last-child
            border-radius 0 0 4px 4px

        & a
            font-size 12px !important
            font-weight 200 !important
            border-radius 4px
            text-indent 1em
            transition 0.25s
            color #fff !important
            line-height 2.5em
            display block
            padding 0px !important
            background #484e5b

            &:hover
                background #ff5400

    &:before
        right 16px
        border-bottom-color #484e5b
        content ""
        border-style solid
        border-width 0 9px 9px
        border-color transparent transparent #515c73
        height 0
        position absolute
        top 16px
        width 0
        -webkit-transform rotate 360deg
