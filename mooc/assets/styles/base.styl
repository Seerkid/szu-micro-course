@import 'vars'

body
  color #75818b
  font-family font_for_mac, font_for_windows, font_for_linux, font_for_common

  a
    color #75818b
    text-decoration none

#header
  background #fff

  #nav-container
    height 66px
    padding 10px
    overflow hidden

    #logo
      width 299px
      height 66px
      margin-top 10px
      text-indent -9999em
      display inline-block
      background url('../images/micro-lecture.png') no-repeat

    #nav
      float right
      margin-top 10px
      line-height 66px

      .index-link
        display none

      a
        color #6b7488
        font-size 15px
        font-weight bold

      a.nav_current
        color #ff5400

      a.user_logged
        color #DF0000

       ul li
        float left
        padding 0 20px 0 20px

#footer
  padding 0px 0 10px 0
  background #fff
  zoom 1

  .banner
    height 0px
    background #55afd5

  #link
    margin 40px 0 20px 0
    text-align center

    li
      font-size 12px
      display inline-block
      margin-right 5px

    li.first:before
      content ''

      a
        color #333333

      &:before
        content '| '
        margin-right 5px

  #copyright
    margin 20px 0 20px 0
    width 100%
    font-size 12px
    text-align center

.full-width
  width 100%

.wrapper
  width 88%
  display block
  margin 0 auto

.shadow
  bottom-border-radius 3
  background #cad6df
  margin 0 auto
  width 99%
  height 5px

.full-line
  height 1px
  width 100%
  background #cad6df
  margin 15px 0 15px 0

.clear
  clear both

