// Define font stack
helvetica-neue = "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
georgia = Georgia, Cambria, "Times New Roman", Times, serif
lucidia-grande = "Lucida Grande", Tahoma, Verdana, Arial, sans-serif
monospace = unquote("'Bitstream Vera Sans Mono', Consolas, Courier, monospace")
verdana = Verdana, Geneva, sans-serif

// Default font stack
font-stack = helvetica-neue
font-size = 16px
font-color = #75818b
body-background = #fff
main-background = #dce5eb


// ------------------
//  Define functions
// ------------------
box-shadow(args...)
    -webkit-box-shadow args
    -moz-box-shadow args
    box-shadow args

border-radius(args...)
    -webkit-border-radius args
    -moz-border-radius args
    border-radius args

top-border-radius(radius)
    -webkit-border-top-left-radius radius*1px
    -webkit-border-top-right-radius radius*1px
    -moz-border-radius-topleft radius*1px
    -moz-border-radius-topright radius*1px
    border-top-left-radius radius*1px
    border-top-right-radius radius*1px

bottom-border-radius(radius)
    -webkit-border-bottom-left-radius radius*1px
    -webkit-border-bottom-right-radius radius*1px
    -moz-border-radius-bottomleft radius*1px
    -moz-border-radius-bottomright radius*1px
    border-bottom-left-radius radius*1px
    border-bottom-right-radius radius*1px

transform-translate3d(x y z)
    -webkit-transform: translate3d(x, y, z)
    -moz-transform: translate3d(x, y, z)
    -o-transform: translate3d(x, y, z)
    transform: translate3d(x, y, z)

bind-animate(name length)
    animation: name length;
    -moz-animation: name length
    -webkit-animation: name length
    -o-animation: name length

transition(during)
    -webkit-transition: during
    -moz-transition: during
    -o-transition: during
    transition: during

linear-background(from to)
    background-image: -webkit-linear-gradient(from, to);
    background-image: -moz-linear-gradient(from, to);
    background-image: linear-gradient(from, to);
