#question-list
  li.question-item
    .question-left-float
      float left
      margin 10px

    .question-stats
      div
        color #aaa
        font-size 12px
        text-align center

        p
          font-size 22px
          line-height 28px

      .respond-count
        color #CC0000

    .question-content

      a
        transition 0.25s
        color #75818b

      a:hover
        color #ff5400

      .question-title
        line-height 36px

      .question-tags
        margin 0
        padding 0

        li
          margin 3px
          float left
          padding 3px
          font-size 12px
          background #eee
          top-border-radius 3px
          bottom-border-radius 3px

      .question-author

        margin 0
        padding 0

        span
          color #bac0c5
          float left
          margin 3px
          padding 3px 0 3px 0
          font-size 12px