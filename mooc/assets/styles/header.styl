LOGO_URL = '../images/micro-lecture.png'
HEADER_BACKGROUND_URL = '../images/header-background.png'

// ---------------------------
//  Styles of header division
// ---------------------------

#header
  #nav-container
    height 66px
    padding 10px
    position relative

    #logo
      width 299px
      height 66px
      margin-top 10px
      text-indent -9999em
      display inline-block
      background url(LOGO_URL) no-repeat

    #nav
      float right
      margin-top 10px
      line-height 66px

      .index-link
        display none

      a
        color #6b7488
        font-size 15px
        font-weight bold

      a.nav_current
        color #ff5400

      a.user_logged
        color #DF0000

      ul li
        float left
        padding 0 20px 0 20px

  .banner
    width 100%
    height 280px
    background #fff url(HEADER_BACKGROUND_URL) repeat-x
    background-size auto 364px

    #banner-text
      color #fff
      font-size 36px
      line-height 280px
      font-family helvetica
